<div class="bigbox">
    {{> header}}

    <div class="body">
        <div class="white-strip">

            <div class="profile-container">
                <div class="profile-header">
                    <img src="{{user.photo}}" alt="User Photo" class="profile-photo">
                    <h1 class="profile-name">{{user.firstname}} {{user.lastname}}</h1>
                    <p class="profile-username">(@{{user.username}})</p>
                </div>
                <div class="profile-details">
                    <p><strong>Email:</strong> {{user.email}}</p>
                    <p><strong>Role:</strong> {{user.role}}</p>
                    <p><strong>Country:</strong> {{user.country}}</p>
                    <p><strong>Gender:</strong> {{user.gender}}</p>
                    <p class="profile-description"><strong>Bio:</strong> {{user.description}}</p>
                </div>
                {{#if isUser}}
                <a href="/user/profile/{{user._id}}/edit"class=" edit-page">
                    ✏️ Edit Profile
                </a>
                {{/if}}
            </div><br><br>

            <h2>User Reviews</h2>
            {{#each reviews}}
            <div class="review">
                <div class="review-header">
                    <div class="user-info">
                        <strong>{{../user.username}}&apos;s review on <a
                                href="/restaurant/{{restaurant}}">{{restaurant}}</a></strong>
                    </div>
                    <div class="review-options">
                        <button onclick="toggleMenu(this)" class="menu-btn">&#x22EE;</button>
                        <div class="dropdown-menu">
                        </div>
                    </div>
                </div>
                <div class="rating2">{{#times this.rating}}⭐{{/times}}</div>

                <p class="review-text">{{text}}</p>

                {{#if media}}
                <div class="review-media">
                    <img src="{{media}}" alt="Review Image">
                </div>
                {{/if}}



                <p class="written-date" style="font-size: small;">{{formatDate createdAt}}</p>
                <div class="review-actions">
                    <span class="count">{{helpful}}</span>👍 |
                    <span class="count"> {{unhelpful}}</span>👎
                </div>
            </div>
            {{else}}
            <p>User has no reviews yet.</p>
            {{/each}}
        </div>

    </div>
    {{> footer}}
</div>